{
  "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "noUnusedLocals": true,
      "suppressImplicitAnyIndexErrors": true,
      "strictNullChecks": true,
      // "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "src",
      "rootDirs": [
          "src",
          "stories"
      ],
      "moduleResolution": "node",
      "jsx": "react",
      "allowJs": false,
      "sourceMap": true,
      "lib": [
          "es5",
          "es6",
          "es7",
          "es2017",
          "dom"
      ],
      "target": "es5",
      "module": "commonjs",
      "outDir": "build/lib"
  },
  "exclude": [
      "node_modules",
      "build",
      "scripts"
  ],
  "include": [
      "src/**/*"
  ]
}
